# ============================================
# Support Portal - Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values

# ============================================
# Core Application Configuration
# ============================================

# FreeScout API Configuration
# Get your API key from FreeScout Admin > Manage > API
FREESCOUT_API_URL=https://your-freescout-instance.com/api
FREESCOUT_API_KEY=your_api_key_here
# Mailbox ID in FreeScout to submit tickets to (required)
# Find your mailbox ID in FreeScout Admin > Mailboxes
FREESCOUT_MAILBOX_ID=1

# Authentication Configuration
# Enable/disable authentication methods
# At least one method should be enabled
DISABLE_AUTH=false
ENABLE_LDAP_AUTH=false
ENABLE_LOCAL_AUTH=true

# LDAP Configuration
# Used for user authentication and lookup
# Note: Use quotes if DN contains spaces (e.g., "OU=Service Accounts")
LDAP_HOST=ldap.yourdomain.com
LDAP_PORT=389
LDAP_BASE_DN=dc=yourdomain,dc=com
LDAP_BIND_DN="cn=helpdesk-service,ou=service-accounts,dc=yourdomain,dc=com"
LDAP_BIND_PASSWORD=service_account_password
LDAP_USER_FILTER=(sAMAccountName=%s)
LDAP_DEFAULT_EMAIL_DOMAIN=yourcompany.com

# Database Configuration
# SQLite database for storing form submissions and tracking
DB_PATH=./data/helpdesk.db

# Application Configuration
APP_DEBUG=false
APP_LOG_LEVEL=info

# File Upload Configuration
# Max size in bytes (10485760 = 10MB)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif

# Security
CSRF_SECRET=generate_random_csrf_secret_here

# ============================================
# Branding & Customization
# ============================================

# Company/Organization Information
COMPANY_NAME="Your Company Inc."
COMPANY_SHORT_NAME="Your Company"
BRAND_ICON=bi-headset
USE_LOGO=true

# Contact Information
SUPPORT_EMAIL=support@yourcompany.com
SUPPORT_PHONE="+1 (555) 123-4567"
IT_CONTACT_EMAIL=it@yourcompany.com

# Self-Service Resources
# Optional: Link to your knowledgebase or self-service portal
# Leave empty to display info card without a link
SELF_SERVICE_URL=https://kb.yourcompany.com

# Portal Settings
PORTAL_TITLE="IT Helpdesk"
PORTAL_NAME="Support Portal"
APP_VERSION=1.0.0
