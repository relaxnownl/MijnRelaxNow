{
    "name": "support-portal/support-portal",
    "description": "End user helpdesk form for submitting tickets to FreeScout",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "slim/twig-view": "^3.3",
        "php-di/php-di": "^7.0",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/ldap": "^6.3",
        "symfony/security-core": "^6.3",
        "monolog/monolog": "^3.4",
        "symfony/yaml": "^6.3",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "symfony/mailer": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3"
    },
    "autoload": {
        "psr-4": {
            "HelpdeskForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelpdeskForm\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/router.php",
        "test": "phpunit"
    }
}
